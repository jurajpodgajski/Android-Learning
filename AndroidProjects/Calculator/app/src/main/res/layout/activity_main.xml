<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    tools:context="juraj.podgajski.com.kalkulator.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prvi Broj: " />

    <EditText
        android:id="@+id/etPrviBroj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Unesi prvi broj" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drugi broj: " />

    <EditText
        android:id="@+id/etDrugiBroj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Unesi drugi broj" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="100">

        <Button
            android:id="@+id/bZbroji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:text="+" />

        <Button
            android:id="@+id/bOduzmi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:text="-" />

        <Button
            android:id="@+id/bPomnozi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:text="*" />

        <Button
            android:id="@+id/bPodijeli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:text="/" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvRezultat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="15dp"
        android:textSize="25dp" />

</LinearLayout>
